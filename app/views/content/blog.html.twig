{% extends theme.template %}
{% block content %}
<section>
    <div class="row">
        <div class="span11">
            {% if flash.message %}
                <div class="alert alert-info">{{flash.message}}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
            {% endif %}
            {% if flash.error %}
                <div class="alert">{{flash.error}}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
            {% endif %}  
        </div>
    </div>
    
    <div class="row">
        <div class="span6 offset1">
            <h1>Welcome to the blog</h1>
            {%for page in blog%}
            <h2>{{page.title}}</h2>
            <p>{{page.created|date('Y-m-d H:i')}}</p>
             
            {{page.data|raw}}
            <p>{{page.author}}</p>
            {%endfor%}
        </div>
            <div class="span4">
                <div class="well">
                <ul>
                {%for page in blog%}
                        <li><a href="{{url('content/page/' ~ page.key)}}">{{page.title}}</a></li>    
                {%endfor%} 
                </ul>
                </div>
            </div>
    </div>
    
</section>

{% endblock %}
